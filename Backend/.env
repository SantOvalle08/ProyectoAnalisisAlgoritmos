# Configuración de la aplicación
APP_NAME="Análisis Bibliométrico API"
DEBUG=true
VERSION="1.0.0"

# Configuración del servidor
HOST="127.0.0.1"
PORT=8000

# Base de datos PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/bibliometric_analysis"
DATABASE_USER="postgres"
DATABASE_PASSWORD="password"
DATABASE_HOST="localhost" 
DATABASE_PORT=5432
DATABASE_NAME="bibliometric_analysis"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0

# Autenticación
SECRET_KEY="your-secret-key-change-in-production-this-should-be-very-long-and-random"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# APIs externas (opcional)
CROSSREF_API_EMAIL="your-email@example.com"
ELSEVIER_API_KEY="your-elsevier-api-key"

# Modelos ML/NLP
MODEL_CACHE_DIR="./models"
DEFAULT_SENTENCE_MODEL="all-MiniLM-L6-v2"
SPACY_MODEL="en_core_web_sm"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="app.log"

# Límites
MAX_FILE_SIZE=10485760  # 10MB
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Configuración específica del proyecto
SEARCH_QUERY="generative artificial intelligence"
MAX_RESULTS_PER_SOURCE=1000